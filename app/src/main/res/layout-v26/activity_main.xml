<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="@string/introduce_tu_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtUsuario" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.097" app:layout_constraintVertical_bias="0.176"
            android:textSize="18sp" android:textColor="@android:color/black" android:textStyle="bold"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:text="@string/bienvenido"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.096"
            android:id="@+id/txtHola" android:textSize="30sp" android:textColor="@color/colorAccent"
            android:textStyle="bold" android:textAlignment="center"/>
    <TextView
            android:text="@string/seleccione_un_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtSelect" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.098" app:layout_constraintVertical_bias="0.357"
            android:textSize="18sp" android:textColor="@android:color/black" android:textStyle="bold"/>
    <TextView
            android:text="@string/mensaje"
            android:layout_width="260dp"
            android:layout_height="29dp"
            android:id="@+id/txtMensaje"
            android:layout_marginTop="220dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="96dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.446"
            android:textSize="18sp" android:textColor="@android:color/black" android:textStyle="bold"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/txtArea_Msg"
            app:layout_constraintVertical_bias="1.0"/>
    <MultiAutoCompleteTextView
            android:layout_width="337dp"
            android:layout_height="96dp"
            android:id="@+id/txtArea_Msg"
            android:labelFor="@+id/txtMensaje"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.617" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.362"
            android:textAlignment="textStart"/>
    <Button
            android:text="Enviar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnEnviar" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.869"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.879" style="@style/Widget.AppCompat.Button.Colored"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/usuario" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.115"
            android:layout_marginTop="152dp"
            app:layout_constraintTop_toTopOf="parent" android:autofillHints=""/>


</android.support.constraint.ConstraintLayout>